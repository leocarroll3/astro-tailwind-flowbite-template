---
// import the Image component and the image
import { Image } from "astro:assets";
import darkImage from "../assets/FMHero2.webp";
import lightImage from "../assets/FMHero2.webp";
const title = "We design, construct, and install residential fences.";
const body =
  "Our success is built upon five years of local experience and honest business practices installing hundreds of fences all over Greer, Inman, Boiling Springs, Chesnee, Spartanburg, Greenville, Lyman and Duncan. We'd love the opportunity to build your fence. Call Max & Ksenya @ 864-612-3200 to arrange a site visit and promptly provide a quote.";
---

<section class="mb-12 bg-stone-100 dark:bg-slate-800">
  <div
    class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6"
  >
    <Image
      src={darkImage}
      class="w-full hidden dark:block"
      alt="A description of my image."
    />
    <Image
      src={lightImage}
      class="w-full dark:hidden border-solid border-2"
      alt="A description of my image."
    />
    <!-- <img class="w-full dark:hidden border-solid border-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup.svg" alt="dashboard image">
        <img class="w-full hidden dark:block" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup-dark.svg" alt="dashboard image"> -->
    <div class="mt-4 md:mt-0">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        {title}
      </h2>
      <p class="mb-8 mt-2 text-lg text-gray-700 dark:text-gray-400">{body}</p>
    </div>
  </div>
</section>
