---
// import the Image component and the image
import { Picture } from "astro:assets";
import Hero from "../assets/FM Hero1.webp";
const title = " ";
const body =
  "We're Max and Ksenya - Fence Max - a local family business focused on the Design, Construction, and Installation of residential fences in the Spartanburg County region. Our success is built upon honest business practices and five years of experience installing hundreds of fences. We've built fences all over the Upstate: Greer, Inman, Boiling Springs, Chesnee, Spartanburg, Greenville, Lyman and Duncan. We'd love the opportunity to build one for you. Call us 864-612-3200 to discuss your requirements and we will promptly provide a quote.";
---

<section class="mb-0 bg-stone-100 dark:bg-slate-800">
  <div
    class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6"
  >
    <Picture
      src={Hero}
      formats={["avif", "webp"]}
      loading="eager"
      alt="white vinyl fence"
    />
    <!-- <img class="w-full dark:hidden border-solid border-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup.svg" alt="dashboard image">
        <img class="w-full hidden dark:block" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/cta/cta-dashboard-mockup-dark.svg" alt="dashboard image"> -->
    <div class="mt-4 md:mt-0">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        {title}
      </h2>
      <p class="mb-2 mt-2 text-lg text-gray-700 dark:text-gray-400">{body}</p>
    </div>
  </div>
</section>
